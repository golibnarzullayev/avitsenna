<style>
  :root {
      --primary-color: #2d46c1;
      --secondary-color: #f7b731;
      --text-color: #333;
      --light-bg: #f8f9fa;
      --border-color: #e9ecef;
  }

  .news-header {
      background-color: white;
      border-radius: 10px;
      padding: 25px;
      margin-top: 30px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
  }

  .news-title {
      font-weight: 700;
      font-size: 2.2rem;
      margin-bottom: 20px;
      color: var(--primary-color);
      line-height: 1.3;
  }

  .news-meta {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      margin-bottom: 20px;
      color: #6c757d;
      font-size: 0.95rem;
  }

    .news-meta i {
        margin-right: 5px;
    }

    .news-image-container {
        position: relative;
        overflow: hidden;
        border-radius: 10px;
        margin-bottom: 25px;
    }

    .news-image {
        width: 100%;
        height: auto;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .news-image-container:hover .news-image {
        transform: scale(1.02);
    }

    .news-short-description {
        font-size: 1.2rem;
        font-weight: 500;
        margin-bottom: 25px;
        line-height: 1.5;
        color: #495057;
        padding-left: 15px;
        border-left: 4px solid var(--secondary-color);
    }

    .news-content {
        background-color: white;
        border-radius: 10px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

    .news-description {
        font-size: 1.1rem;
        line-height: 1.7;
        color: #495057;
    }

    .news-description p {
        margin-bottom: 20px;
    }

    .news-description img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin: 20px 0;
    }

    .news-stats {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid var(--border-color);
    }

    .news-stats-item {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #6c757d;
        font-size: 0.95rem;
    }

    .news-stats-item i {
        font-size: 1.1rem;
        color: var(--secondary-color);
    }

    .share-buttons {
        display: flex;
        gap: 10px;
        margin-top: 20px;
    }

    .share-button {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        color: white;
        font-size: 1.2rem;
        transition: all 0.3s ease;
        background-color: var(--primary-color);
    }

    .share-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
    }

    .facebook { background-color: #3b5998; }
    .twitter { background-color: #1da1f2; }
    .linkedin { background-color: #0077b5; }
    .telegram { background-color: #0088cc; }

    .related-news {
        margin-top: 40px;
        margin-bottom: 40px;
    }

    .related-news-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 20px;
        color: var(--primary-color);
    }

    .related-news-card {
        background-color: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        height: 100%;
    }

    .related-news-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    .related-news-card .card-img-top {
        height: 180px;
        object-fit: cover;
    }

    .related-news-card .card-body {
        padding: 20px;
    }

    .related-news-card .card-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 10px;
        color: var(--text-color);
    }

    .related-news-card .card-text {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 10px;
    }

    .related-news-card .card-link {
        color: var(--primary-color);
        font-weight: 600;
        text-decoration: none;
        font-size: 0.9rem;
    }

    .related-news-card .card-link:hover {
        text-decoration: underline;
    }

    .back-to-top {
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background-color: var(--primary-color);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        z-index: 999;
    }

    .back-to-top:hover {
        background-color: #1a237e;
        transform: translateY(-3px);
    }

    .modal-body {
        padding: 0;
    }

    .modal-content {
        border-radius: 15px;
        overflow: hidden;
    }

    .modal-img {
        width: 100%;
        height: auto;
    }

    @media (max-width: 767px) {
        .news-title {
            font-size: 1.8rem;
        }
        
        .news-meta {
            flex-direction: column;
            gap: 10px;
        }
        
        .news-short-description {
            font-size: 1.1rem;
        }
        
        .news-description {
            font-size: 1rem;
        }
    }
</style>
