{{> admin/header}}
{{> admin/sidebar}}
<main id="main" class="main">
   {{> admin/pageTitle}}
   <section class="section dashboard">
      <div class="row">
         <div class="col-12">
            <div class="card">
               {{#if updateErr}}
                  <div class="card-header">
                     <div class="alert alert-danger">{{updateErr}}</div>
                  </div>
               {{/if}}
               {{#if news}}
                  <div class="card-body p-3">
                     <form action="/admin/news/edit/{{news._id}}" method="post" class="row" enctype="multipart/form-data">
                        <div class="col-12 mb-3">
                           <label for="title" class="form-label card-title">
                              Yangilik sarlavhasi
                           </label>
                           <input type="text" class="form-control" name="title" id="title" placeholder="Yangilik sarlavhasi" value="{{news.title}}">
                        </div>
                        <div class="col-lg-12">
                           <div class="col-lg-12 mb-3">
                              <label for="image" class="form-label card-title">
                                 Asosiy rasm
                              </label>
                              <input type="file" class="form-control" name="image" id="image">
                           </div>
                        </div>
                        <div class="col-lg-12">
                           <div class="col-lg-12">
                              <label for="shortDescription" class="form-label card-title">
                                 Qisqacha ma'lumot
                              </label>
                              <textarea class="form-control" rows="6" name="shortDescription" id="shortDescription" placeholder="Qisqacha ta'rif">{{news.shortDescription}}</textarea>
                           </div>
                        </div>
                        
                        <div class="col-lg-12 mb-3">
                           <label for="description" class="form-label card-title">
                              To'liq ma'lumot
                           </label>
                           <textarea class="form-control tinymce-editor" rows="10" name="description" id="description" placeholder="To'liq ma'lumot">{{{news.description}}}</textarea>
                        </div>
                        <div class="col-lg-12">
                           <button class="btn btn-success">
                              Saqlash
                           </button>
                        </div>
                     </form>
                  </div>
               {{/if}}
            </div>
         </div>
      </div>
   </section>
</main>