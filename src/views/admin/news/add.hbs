{{> admin/header}}
{{> admin/sidebar}}
<main id="main" class="main">
   {{> admin/pageTitle}}
   <section class="section dashboard">
      <div class="row">
         <div class="col-12">
            <div class="card">
               {{#if addErr}}
                  <div class="card-header">
                     <div class="alert alert-danger">{{addErr}}</div>
                  </div>
               {{/if}}
               <div class="card-body p-3">
                  <form action="/admin/news/add" method="post" class="row needs-validation" novalidate enctype="multipart/form-data">
                     <div class="col-12 has-validation mb-3">
                        <label for="title" class="form-label card-title">
                           Yangilik sarlavhasi
                        </label>
                        <input type="text" class="form-control" name="title" id="title" placeholder="Yangilik sarlavhasi" required>
                     </div>
                     <div class="col-lg-12">
                        <div class="col-lg-12 has-validation mb-3">
                           <label for="image" class="form-label card-title">
                              Asosiy rasm
                           </label>
                           <input type="file" class="form-control" name="image" id="image" required>
                           <div class="invalid-feedback">Iltimos, rasm tanlang</div>
                        </div>
                     </div>
                     <div class="col-lg-12">
                        <div class="col-lg-12 has-validation">
                           <label for="shortDescription" class="form-label card-title">
                              Qisqacha ma'lumot
                           </label>
                           <textarea class="form-control" rows="6" name="shortDescription" id="shortDescription" placeholder="Qisqacha ta'rif" required></textarea>
                           <div class="invalid-feedback">Iltimos, qisqacha ma'lumot kiriting</div>
                        </div>
                     </div>
                     
                     <div class="col-lg-12 has-validation mb-3">
                        <label for="description" class="form-label card-title">
                           To'liq ma'lumot
                        </label>
                        <textarea class="form-control tinymce-editor" rows="10" name="description" id="description" placeholder="To'liq ma'lumot" required></textarea>
                        <div class="invalid-feedback">Iltimos, to'liq ma'lumot kiriting</div>
                     </div>
                     <div class="col-lg-12">
                        <button class="btn btn-primary">
                           Qo'shish
                        </button>
                     </div>
                  </form>
               </div>
            </div>
         </div>
      </div>
   </section>
</main>