{{> admin/header}}
{{> admin/sidebar}}
<main id="main" class="main">
   {{> admin/pageTitle}}
   <section class="section dashboard">
      <div class="row">
         <div class="col-12">
            <div class="card">
               {{#if updateErr}}
                  <div class="card-header">
                     <div class="alert alert-danger">{{updateErr}}</div>
                  </div>
               {{/if}}
               {{#if leadership}}
               <div class="card-body p-3">
                  <form action="/admin/leadership/edit/{{leadership._id}}" method="post" class="row needs-validation" novalidate enctype="multipart/form-data">
                     <div class="col-12 has-validation mb-3">
                        <label for="fullName" class="form-label card-title p-0">
                          Ism Familiyasi
                        </label>
                        <input type="text" class="form-control" name="fullName" id="fullName" placeholder="Ism familiyasi" required value="{{leadership.fullName}}">
                     </div>
                     <div class="col-12 has-validation mb-3">
                        <label for="position" class="form-label card-title p-0">
                          Lavozimi
                        </label>
                        <input type="text" class="form-control" name="position" id="position" placeholder="Lavozimi" required value="{{leadership.position}}">
                     </div>
                     <div class="col-12 has-validation mb-3">
                        <label for="image" class="form-label card-title p-0">
                          Rasmi
                        </label>
                        <input type="file" class="form-control" name="image" id="image">
                        <div class="invalid-feedback">Iltimos, rasm tanlang</div>
                    </div>
                    <div class="col-12 mb-3">
                     <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="isLeader" name="isLeader" checked={{leadership.isLeader}}>
                        <label class="form-check-label" for="isLeader">Rahbarmi?</label>
                     </div>
                    </div>
                     <div class="col-12 mb-3">
                        <div class="col-lg-12 has-validation">
                           <label for="description" class="form-label card-title p-0">
                              Qisqacha ma'lumot
                           </label>
                           <textarea class="form-control" rows="6" name="description" id="description" placeholder="Qisqacha ta'rif" required>{{leadership.description}}</textarea>
                           <div class="invalid-feedback">Iltimos, qisqacha ma'lumot kiriting</div>
                        </div>
                     </div>
                     <div class="col-lg-12">
                        <button class="btn btn-primary">
                          Saqlash
                        </button>
                     </div>
                  </form>
               </div>
               {{/if}}
            </div>
         </div>
      </div>
   </section>
</main>