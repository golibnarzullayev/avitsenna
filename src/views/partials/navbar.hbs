<!-- Custom CSS -->
<style>
  /* Asosiy ranglar */
  :root {
    --primary-color: #3a86ff;
    --secondary-color: #4361ee;
    --accent-color: #4cc9f0;
    --text-dark: #2b2d42;
    --text-light: #6c757d;
    --white: #ffffff;
  }
  
  /* Navbar asosiy stillar */
  .navbar-modern {
    padding: 15px 0;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
  }
  
  .navbar-scrolled {
    padding: 10px 0;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
  }
  
  /* Logo stillar */
  .navbar-modern .navbar-brand img {
    height: 50px;
    transition: all 0.3s ease;
  }
  
  /* Navbar link stillar */
  .navbar-modern .nav-link {
    color: var(--text-dark);
    font-weight: 500;
    padding: 10px 15px !important;
    position: relative;
    transition: all 0.3s ease;
  }
  
  /* Dropdown ikonini to'g'rilash */
  .navbar-modern .dropdown-toggle::after {
    display: inline-block;
    margin-left: 0.255em;
    vertical-align: middle;
    position: static;
    width: auto;
    height: auto;
    background-color: transparent;
    transform: none;
  }
  
  /* Hujjat topshirish tugmasi */
  .btn-application {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: var(--white);
    border: none;
    border-radius: 30px;
    padding: 10px 25px;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(67, 97, 238, 0.3);
  }
  
  .btn-application:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(67, 97, 238, 0.4);
    color: var(--white);
  }
  
  /* Qidiruv maydoni */
  .search-box {
    position: relative;
    margin-right: 15px;
  }
  
  .search-box input {
    padding: 10px 20px 10px 40px;
    border-radius: 30px;
    border: 1px solid #e0e0e0;
    background-color: #f8f9fa;
    width: 180px;
    transition: all 0.3s ease;
  }
  
  .search-box input:focus {
    width: 220px;
    box-shadow: 0 0 0 0.25rem rgba(67, 97, 238, 0.15);
    border-color: var(--primary-color);
    outline: none;
  }
  
  .search-box .search-icon {
    position: absolute;
    left: 15px;
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-light);
  }
  
  /* Dropdown stillar */
  .dropdown-menu {
    border: none;
    border-radius: 10px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    padding: 10px;
    margin-top: 15px;
    transition: all 0.3s ease;
  }
  
  .dropdown-item {
    padding: 8px 20px;
    color: var(--text-dark);
    border-radius: 5px;
    transition: all 0.3s ease;
  }
  
  .dropdown-item:hover {
    background-color: rgba(58, 134, 255, 0.1);
    color: var(--primary-color);
  }
  
  /* Responsive stillar */
  @media (max-width: 992px) {
    .navbar-collapse {
      background-color: var(--white);
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      margin-top: 15px;
    }
    
    .navbar-modern .nav-link::after {
      bottom: 0;
    }
    
    .search-box {
      margin: 15px 0;
      width: 100%;
    }
    
    .search-box input {
      width: 100%;
    }
    
    .search-box input:focus {
      width: 100%;
    }
    
    .dropdown-menu {
      box-shadow: none;
      padding-left: 20px;
      background: transparent;
      margin-top: 0;
    }
  }
</style>

<!-- Navbar HTML -->
<nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top navbar-modern" id="mainNav">
