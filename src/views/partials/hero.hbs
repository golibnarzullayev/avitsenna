<style>
  .main-banner {
      position: relative;
      height: 600px;
      background-image: url('assets/img/virtual-tour-2.jpg');
      background-size: cover;
      background-position: center;
      color: white;
  }
  
  .banner-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(to right, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.4) 50%, rgba(0,0,0,0.2) 100%);
      display: flex;
      align-items: center;
  }
  
  .banner-content {
      max-width: 650px;
      padding: 0 20px;
  }
  
  .banner-title {
      font-size: 3.2rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
      animation: fadeInUp 1s ease;
  }
  
  .banner-subtitle {
      font-size: 1.4rem;
      margin-bottom: 2rem;
      opacity: 0.9;
      animation: fadeInUp 1s ease 0.3s;
      animation-fill-mode: both;
  }
  
  .banner-btn {
      display: inline-block;
      padding: 12px 30px;
      background-color: #0d6efd;
      color: white;
      text-decoration: none;
      border-radius: 50px;
      font-weight: 600;
      transition: all 0.3s ease;
      animation: fadeInUp 1s ease 0.6s;
      animation-fill-mode: both;
  }
  
  .banner-btn:hover {
      background-color: #0b5ed7;
      transform: translateY(-3px);
      box-shadow: 0 10px 20px rgba(0,0,0,0.1);
  }
  
  .banner-btn-outline {
      background-color: transparent;
      border: 2px solid white;
      margin-left: 15px;
  }
  
  .banner-btn-outline:hover {
      background-color: white;
      color: #333;
  }
  
  /* Banner Stats */
  .banner-stats {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      background-color: rgba(0,0,0,0.5);
      padding: 20px 0;
  }
  
  .stat-item {
      text-align: center;
      padding: 0 15px;
  }
  
  .stat-number {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 5px;
      color: white;
  }
  
  .stat-label {
      color: rgba(255,255,255,0.8);
      font-size: 1rem;
  }
  
  /* Info Boxes Section */
  .info-boxes {
      padding: 60px 0;
      background-color: #f8f9fa;
  }
  
  .info-box {
      background-color: white;
      border-radius: 10px;
      padding: 30px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
      transition: all 0.3s ease;
      height: 100%;
  }
  
  .info-box:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 35px rgba(0,0,0,0.15);
  }
  
  .info-box-icon {
      width: 70px;
      height: 70px;
      background-color: #e9f5ff;
      color: #0d6efd;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.8rem;
      margin-bottom: 20px;
  }
  
  .info-box-2 .info-box-icon {
      background-color: #fff0e9;
      color: #fd7e14;
  }
  
  .info-box-3 .info-box-icon {
      background-color: #e9fff0;
      color: #28a745;
  }
  
  .info-box h3 {
      font-size: 1.4rem;
      font-weight: 700;
      margin-bottom: 15px;
      color: #333;
  }
  
  .info-box p {
      color: #666;
      margin-bottom: 20px;
  }
  
  .info-box-link {
      display: flex;
      align-items: center;
      color: #0d6efd;
      font-weight: 600;
      font-size: 0.9rem;
      text-decoration: none;
      transition: all 0.3s ease;
  }
  
  .info-box-2 .info-box-link {
      color: #fd7e14;
  }
  
  .info-box-3 .info-box-link {
      color: #28a745;
  }
  
  .info-box-link i {
      margin-left: 5px;
      transition: all 0.3s ease;
  }
  
  .info-box-link:hover i {
      transform: translateX(3px);
  }
  
  /* Animations */
  @keyframes fadeInUp {
      from {
          opacity: 0;
          transform: translateY(30px);
      }
      to {
          opacity: 1;
          transform: translateY(0);
      }
  }
  
  /* Responsive adjustments */
  @media (max-width: 991px) {
      .main-banner {
          height: 500px;
      }
      
      .banner-title {
          font-size: 2.5rem;
      }
      
      .banner-subtitle {
          font-size: 1.2rem;
      }
      
      .stat-number {
          font-size: 2rem;
      }
  }
  
  @media (max-width: 767px) {
      .main-banner {
          height: 450px;
      }
      
      .banner-title {
          font-size: 2rem;
          margin-bottom: 1rem;
      }
      
      .banner-subtitle {
          font-size: 1rem;
          margin-bottom: 1.5rem;
      }
      
      .banner-btn {
          padding: 10px 20px;
          display: block;
          margin-bottom: 10px;
          text-align: center;
      }
      
      .banner-btn-outline {
          margin-left: 0;
      }
      
      .banner-stats {
          padding: 10px 0;
      }
      
      .stat-number {
          font-size: 1.5rem;
      }
      
      .stat-label {
          font-size: 0.8rem;
      }
      
      .info-box {
          margin-bottom: 20px;
      }
  }
</style>

