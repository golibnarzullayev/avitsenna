<style>
    :root {
        --primary-color: #0d3575;
        --accent-color: #4285f4;
        --light-accent: rgba(66, 133, 244, 0.1);
        --text-light: #ffffff;
        --text-muted: rgba(255, 255, 255, 0.7);
        --text-highlight: #ffc107;
        --border-color: rgba(255, 255, 255, 0.1);
    }

    .footer {
        background-color: var(--primary-color);
        color: var(--text-light);
        padding: 70px 0 30px;
        position: relative;
        overflow: hidden;
    }

    .footer::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 5px;
        background: linear-gradient(90deg, var(--accent-color), var(--text-highlight));
    }

    .footer-wave {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        opacity: 0.05;
        z-index: 0;
    }

    .footer-content {
        position: relative;
        z-index: 1;
    }

    .footer h4 {
        color: var(--text-light);
        font-weight: 600;
        margin-bottom: 25px;
        position: relative;
        padding-bottom: 15px;
        font-size: 1.25rem;
        letter-spacing: 0.5px;
    }

    .footer h4::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 40px;
        height: 3px;
        background-color: var(--accent-color);
        border-radius: 3px;
    }

    .footer-links {
        list-style: none;
        padding-left: 0;
    }

    .footer-links li {
        margin-bottom: 12px;
        transition: transform 0.3s ease;
    }

    .footer-links li:hover {
        transform: translateX(5px);
    }

    .footer-links a {
        color: var(--text-muted);
        text-decoration: none;
        transition: color 0.3s;
        display: flex;
        align-items: center;
        font-size: 0.95rem;
    }

    .footer-links a:hover {
        color: var(--text-light);
    }

    .footer-links a i {
        margin-right: 8px;
        font-size: 0.8rem;
    }

    .contact-info {
        margin-bottom: 12px;
    }

    .contact-info a {
        color: var(--text-muted);
        text-decoration: none;
        transition: color 0.3s;
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

    .contact-info a:hover {
        color: var(--text-light);
    }

    .contact-info i {
        width: 25px;
        color: var(--accent-color);
        margin-right: 10px;
    }

    .map-container {
        position: relative;
        height: 200px;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .map-container iframe {
        width: 100%;
        height: 100%;
        border: none;
    }

    .social-links {
        display: flex;
        margin-top: 20px;
    }

    .social-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        margin-right: 15px;
        color: var(--text-light);
        transition: all 0.3s ease;
    }

    .social-icon:hover {
        background-color: var(--accent-color);
        transform: translateY(-3px);
    }

    .footer-bottom {
        border-top: 1px solid var(--border-color);
        padding-top: 25px;
        margin-top: 40px;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
    }

    .footer-logo {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-light);
        display: flex;
        align-items: center;
    }

    .footer-logo span {
        color: var(--accent-color);
    }

    .copyright {
        color: var(--text-muted);
        font-size: 0.9rem;
    }

    .timeline {
        position: relative;
        max-width: 800px;
        margin: 40px auto 0;
        padding: 25px;
        background-color: rgba(255, 255, 255, 0.03);
        border-radius: 10px;
    }

    .timeline::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg, rgba(66, 133, 244, 0.03), rgba(255, 193, 7, 0.03));
        border-radius: 10px;
    }

    .timeline-title {
        text-align: center;
        color: var(--text-light);
        margin-bottom: 20px;
        font-weight: 300;
        letter-spacing: 1px;
    }

    .timeline-content {
        display: flex;
        justify-content: space-between;
        position: relative;
        z-index: 1;
    }

    .timeline-event {
        text-align: center;
        flex: 1;
    }

    .timeline-event::after,
    .timeline-event-2::after {
        content: "";
        position: absolute;
        top: 35px;
        left: 50%;
        width: 100%;
        height: 1px;
        background-color: var(--border-color);
        transform: translateX(-50%);
        z-index: -1;
    }

    .timeline-event:last-child::after {
        display: none;
    }

    .timeline-year {
        display: inline-block;
        background-color: var(--primary-color);
        border: 2px solid var(--accent-color);
        color: var(--text-highlight);
        border-radius: 50%;
        width: 70px;
        height: 70px;
        line-height: 66px;
        font-size: 1.2rem;
        font-weight: 700;
        margin-bottom: 15px;
        position: relative;
        z-index: 2;
    }

    .timeline-text {
        color: var(--text-muted);
        font-size: 0.9rem;
        line-height: 1.5;
    }

    @media (max-width: 991px) {
        .footer {
            padding: 50px 0 20px;
        }

        .footer-col {
            margin-bottom: 40px;
        }
    }

    @media (max-width: 767px) {
        .timeline-content {
            flex-direction: column;
        }
        
        .timeline-event {
            margin-bottom: 40px;
        }
        
        .timeline-event::after {
            display: none;
        }
        
        .timeline-event:last-child {
            margin-bottom: 0;
        }
        
        .footer-bottom {
            flex-direction: column;
            text-align: center;
        }
        
        .footer-logo {
            margin-bottom: 15px;
        }
        
        .copyright {
            margin-top: 10px;
        }
    }
</style>

