<header class="news-header text-center">
  <div class="container">
    <h1 data-aos="fade-up">Avitsenna maktabi yangiliklari</h1>
    <p data-aos="fade-up" data-aos-delay="100">Maktabimizda sodir bo'layotgan eng so'nggi yangiliklar, tadbirlar va yutuqlar haqida bilib oling</p>
  </div>
</header>

<div class="container">
  <!-- Search -->
  <div class="search-container" data-aos="fade-up">
    <i class="bi bi-search"></i>
    <form action="/news">
      <input type="text" class="form-control" name="search" placeholder="Yangiliklar bo'yicha qidirish...">
    </form>
  </div>
  
  <!-- News Cards -->
  {{#if news}}
    <div class="row">
    <!-- News Card 1 -->
      {{#each news}}
      <div class="col-md-6 col-lg-4" data-aos="fade-up">
        <div class="card news-card">
          {{!-- <div class="card-img-container"> --}}
            <img src="{{image}}" class="card-img-top" alt="{{title}}">
          {{!-- </div> --}}
          <div class="card-body">
            <div class="news-date mt-3">
              <i class="bi bi-calendar3"></i> {{formatDate createdAt}}
            </div>
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{shortDescription}}</p>
            <a href="/news/{{slug}}" class="read-more">Batafsil <i class="bi bi-arrow-right"></i></a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  
  <!-- Pagination -->
  {{#ifMax pageCount 1}}
    <nav aria-label="Page navigation example">
        <ul class="pagination">
          {{#paginate pagination type="previous"}}
              <li class="page-item {{#if disabled}} disabled {{/if}}">
                <a class="page-link" href="?page={{n}}" style="font-size: 24px;">
                    <i class='bx bx-chevrons-left'></i>
                </a>
              </li>
          {{/paginate}}
          {{#paginate pagination type="next"}}
              <li class="page-item {{#if disabled}} disabled {{/if}}">
                <a class="page-link" href="?page={{n}}" style="font-size: 24px;">
                    <i class='bx bx-chevrons-right'></i>
                </a>
              </li>
          {{/paginate}}
        </ul>
    </nav>
  {{/ifMax}}
  {{else}}
    <div class="no-results-container text-center my-5 py-5" id="noResultsContainer">
      <div data-aos="fade-up" class="py-4">
        <i class="bi bi-search"></i>
        <h3 class="mt-4 mb-3">Yangiliklar topilmadi</h3>
        <p class="text-muted mb-4 mx-auto" style="max-width: 500px;">
          Qidiruv so'rovingiz yoki tanlangan filtrlarga mos yangiliklar topilmadi. Boshqa kalit so'zlardan foydalanib ko'ring
        </p>
        <a href="/news" class="btn btn-primary px-4 py-2 rounded-pill">
          Barcha yangiliklarni ko'rsatish
        </a>
      </div>
    </div>
  {{/if}}
</div>

{{> footer}}
<script>
  // Animatsiyalarni ishga tushirish
  AOS.init({
    duration: 800,
    easing: 'ease-in-out',
    once: true
  });
  
  // Filter tugmalarni ishga tushirish
  document.querySelectorAll('.filter-btn').forEach(button => {
    button.addEventListener('click', function() {
      // Barcha aktiv klasslarni olib tashlash
      document.querySelectorAll('.filter-btn').forEach(btn => {
        btn.classList.remove('active');
      });
      
      // Bosilgan tugmani aktiv qilish
      this.classList.add('active');
      
      // Bu yerda kerakli filterlar qo'shilishi mumkin
    });
  });
</script>