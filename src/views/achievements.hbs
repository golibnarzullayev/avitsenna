<style>
    .news-header {
      background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.3) 100%), url('assets/img/virtual-tour-2.jpg');
      background-size: cover;
      background-position: center;
      color: white;
      padding: 5rem 0;
      margin-bottom: 3rem;
      position: relative;
    }
    
    .news-header h1 {
      font-weight: 700;
      font-size: 3rem;
      letter-spacing: -0.5px;
    }
    
    .news-header p {
      max-width: 600px;
      margin: 0 auto;
      font-size: 1.1rem;
      opacity: 0.9;
    }

    .achievement-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 30px;
    }
    
    .achievement-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
    
    .achievement-image-wrapper {
        text-align: center;
        background-color: #f8f9fa;
        padding: 10px;
    }
    
    .achievement-image {
        max-width: 100%;
        max-height: 300px; /* Reduced height */
        width: auto;
    }
    
    .card-content {
        padding: 15px;
    }
    
    .card-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 8px;
    }
    
    .card-text {
        color: #6c757d;
        margin-bottom: 10px;
        font-size: 0.9rem;
    }
    
    .card-footer {
        padding: 10px 15px;
        background-color: #f8f9fa;
        border-top: 1px solid #e9ecef;
        font-size: 0.85rem;
    }
    
    .badge-corner {
        position: absolute;
        top: 10px;
        right: 10px;
        z-index: 10;
    }
    
    .header-bg {
        background: linear-gradient(to right, #3494e6, #ec6ead);
        color: white;
    }
</style>

{{> navbar}}

<header class="news-header text-center">
  <div class="container">
    <h1 data-aos="fade-up">O'quvchilar yutuqlari</h1>
    <p data-aos="fade-up" data-aos-delay="100">Bizning maktabimiz o'quvchilarining erishgan muvaffaqiyatlari</p>
  </div>
</header>

<div class="container">
    <div class="row" id="achievementsContainer">
        {{#each achievements}}
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card achievement-card position-relative">
                <span class="badge bg-success badge-corner">Yutuq</span>
                <div class="achievement-image-wrapper">
                    <!-- Limit image height -->
                    <img src="{{image}}" class="achievement-image" alt="{{fullName}} yutuÄŸi">
                </div>
                <div class="card-content">
                    <h5 class="card-title">{{fullName}}</h5>
                    <p class="card-text">{{description}}</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Sana: {{formatDate createdAt}}</small>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

{{> footer}}